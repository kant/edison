{
    "name": "Tulip",
    "version": "0.1",
    "description": "Voice activated browsing of Chrome.",
    "manifest_version": 2,
    "permissions": [
        "declarativeContent", 
        "tabs", 
        "activeTab"
    ],
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": [
            "communication/communication.js",
            "vendor/fuse.js",
            "intents/click/fuseClick.js",
            "communication/responder.js"
          ]
        }
    ],
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
              "windows": "Ctrl+Shift+O",
              "mac": "Command+Shift+O"
            }
        }
    }
  }