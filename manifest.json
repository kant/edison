{
    "name": "Edison",
    "version": "1.1",
    "description": "Voice activated browsing of Chrome.",
    "manifest_version": 2,
    "permissions": [
        "declarativeContent", 
        "tabs", 
        "activeTab",
        "*://pekdiloijmdpipofopndagebeeffemdf/background.html"
    ],
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
          "16": "assets/icon16.png",
          "32": "assets/icon32.png",
          "48": "assets/icon48.png",
          "128": "assets/icon128.png"
        }
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
              "windows": "Ctrl+Shift+O",
              "mac": "Command+Shift+O"
            }
        }
    },
    "icons": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  }