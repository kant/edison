{
    "name": "Tulip",
    "version": "1.0",
    "description": "Handsfree voice activated browsing of Chrome! Special support for Netflix",
    "manifest_version": 2,
    "permissions": ["declarativeContent"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources": [
        "node_modules/*"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
              "windows": "Ctrl+Shift+O",
              "mac": "Command+Shift+O"
            }
        }
    }
  }